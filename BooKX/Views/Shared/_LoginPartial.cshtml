@using Microsoft.AspNet.Identity

@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
        @Html.AntiForgeryToken()

        <ul class="nav navbar-nav navbar-right">
            <li>
                <a href="@Url.Action("Index", "Cart")" class="btn btn-link">
                    <i id="CartIcon" class="glyphicon glyphicon-shopping-cart icon_color_white"></i>
                    <i id="CartIcon2"></i>
                    <span>
                        <strong>Cart</strong>
                    </span>
                </a>
            </li>
            <li>
                @Html.ActionLink("Hola " + User.Identity.GetUserName() + "!", "Index", "Manage", routeValues: null, htmlAttributes: new { title = "Manage" })
            </li>
            <li><a href="javascript:document.getElementById('logoutForm').submit()">Cerrar Sesion</a></li>
        </ul>
    }
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li>
            <a href="@Url.Action("Index", "Cart")" class="btn btn-link">
                <i id="CartIcon" class="glyphicon glyphicon-shopping-cart icon_color_white"></i>
                <i id="CartIcon2"></i>
                <span>
                    <strong>Cart</strong>
                </span>
            </a>
        </li>
        <li>@Html.ActionLink("Registrarse", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink" })</li>
        <li>@Html.ActionLink("Accede", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>
    </ul>
}
